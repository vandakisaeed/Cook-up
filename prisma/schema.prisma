generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id               Int      @id
  name             String
  ingredients      String
  instructions     String
  prepTimeMinutes  Int?
  cookTimeMinutes  Int?
  servings         Int?
  difficulty       String?
  cuisine          String?
  caloriesPerServing Int?
  tags             String?
  userId           Int?
  image            String?
  rating           Float?
  reviewCount      Int?
  mealType         String?
}
