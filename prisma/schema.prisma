generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  recipes Recipe[]
}

model Recipe {
  id                 Int     @id @default(autoincrement())
  name               String
  ingredients        String
  instructions       String
  caloriesPerServing Int?
  cookTimeMinutes    Int?
  cuisine            String?
  difficulty         String?
  image              String?
  mealType           String?
  prepTimeMinutes    Int?
  rating             Float?
  reviewCount        Int?
  servings           Int?
  tags               String?
  userId             Int?
  category           String?
  description        String?
  user               User?   @relation(fields: [userId], references: [id])
}
